tril1 <- function(M, k) {
  if (k != 0) {
    M[!lower.tri(M, diag = TRUE)] <- 0
    M[!upper.tri(M, diag = TRUE)] <- 0
  } else {
    M[col(M) == row(M) + k ] <- 0
  }
  return(M)
}

M = matrix(c(5,4,7,
             1,3,3,
             6,9,8), nrow = 3, byrow = TRUE)

tril1(M, 0)
